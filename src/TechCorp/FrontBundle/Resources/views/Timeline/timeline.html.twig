{% extends 'TechCorpFrontBundle::Layout.html.twig' %}


{% block content %}
<div class="container">
  <h1>Timeline</h1>
    <table class="statuses_list">
      <thead>
       <tr>
        <th>User</th>
        <th>Content</th>
        <th>Created</th>
        <th>DeletedAt</th>      
       </tr>
      </thead>
      <tbody>
       {% for status in statuses %}
        <tr>
         <td>{{ status.user.username}}</td>
         <td>{{ status.content }}</td>
         <td>{{ status.deleted ? "deleted" :"visible" }}</td>
         <td>{{ status.createdAt|date('d-m-y') }}</td>
        </tr>
       {% endfor %}
      </tbody>
    
    </table>
  
</div>



{% endblock content %}